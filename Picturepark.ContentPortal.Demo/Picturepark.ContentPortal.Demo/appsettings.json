{
    "Logging": {
        "IncludeScopes": false,
        "LogLevel": {
            "Default": "Warning",
            "System": "Warning",
            "Microsoft": "Warning"
        }
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.ElasticSearch" ],
        "MinimumLevel": "Warning",
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {SourceContext}: {Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/demo-content-portal.log",
                    "rollingInterval": "Day",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {SourceContext}: {Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "Elasticsearch",
                "Args": {
                    "nodeUris": "http://srvloges01.ad.vit.ch:9200",
                    "indexFormat": "cp-microsites-log-{0:yyyy.MM}",
                    "typeName": "log",
                    "batchPostingLimit": 50,
                    "period": 2000,
                    "inlineFields": true,
                    "restrictedToMinimumLevel": "Warning",
                    "bufferBaseFilename": "log/buffer",
                    "bufferFileSizeLimitBytes": 5242880,
                    "bufferLogShippingInterval": 2000
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "Application": "Demo Content Portal"
        }
    },
